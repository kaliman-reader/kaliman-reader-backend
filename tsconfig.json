{
  "compilerOptions": {
    "target": "es2020",
    "strict": true,
    "preserveConstEnums": true,
    "noEmit": true,
    "sourceMap": false,
    "module":"commonjs",
    "moduleResolution":"node",
    "types": ["node"],
    "esModuleInterop": true, 
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true, 
    "isolatedModules": true,
    "outDir": "./dist/",
    "outFile": "./dist/index.js",
  },
  "exclude": ["node_modules", "**/*.test.ts"],
}